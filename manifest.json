{
 "manifest_version": 3,
  "name": "Meta Checker - メタ情報表示拡張機能",
  "version": "1.1",
  "description": "ページのメタデータを簡単に確認できる拡張機能です。",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "表示 / 非表示 Meta 情報",
    "default_icon": {
      "128": "icons/128.png"
    }
  },
  "icons": {
    "128": "icons/128.png"
  }
}
